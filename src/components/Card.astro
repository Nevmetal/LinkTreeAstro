---
const personalImageAlt = "William Guaña";
const name = "William Guaña";
const description = "Fullstack Developer";
import SocialPill from "@/components/SocialPill.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import GitHub from "@/components/icons/GitHub.astro";
---

<article
  class="min-w-96 max-w-lg bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700"
>
  <section class="flex flex-col items-center pb-10 pt-10">
    <div class="flex flex-col items-center">
      <img
        class="w-24 h-24 rounded-full shadow-lg"
        src="/src/assets/me.webp"
        alt={personalImageAlt || "Logo"}
      />
      <h5 class="mb-1 text-xl font-medium text-gray-900 dark:text-white">
        {name}
      </h5>
      <span class="text-sm text-gray-500 dark:text-gray-400">{description}</span
      >
    </div>

    <div class="flex mt-2 md:mt-4">
      <nav class="flex flex-wrap gap-4 ">
        <SocialPill href="mailto:wbgua@live.com">
          <MailIcon class="size-7" />
        </SocialPill>
        <SocialPill
          href="https://www.linkedin.com/in/william-andres-gua%C3%B1a/"
        >
          <LinkedInIcon class="size-7" />
        </SocialPill>
        <SocialPill href="https://github.com/Nevmetal">
          <GitHub class="size-7" />
        </SocialPill>
      </nav>
    </div>
  </section>
</article>
